<h3>Step 3</h3>

<div class="container">
  <div class="row ">
    <div class="col-xs-2 col-xs-offset-2">
      <%= image_tag("one-green.svg", size: "35") %>
      <p>About <br>Your Business</p>
    </div>
    <div class="col-xs-2">
      <%= image_tag("two-green.svg", size: "35") %>
      <p>More About<br> Your Business</p>
    </div>
    <div class="col-xs-2">
      <%= image_tag("three-green.svg", size: "35") %>
      <p>About<br> You</p>
    </div>
    <div class="col-xs-2">
      <%= image_tag("four-grey.svg", size: "35") %>
      <p>References</p>
    </div>
  </div><br><br>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h4>Tell us a little bit about yourself.</h4>
      <div class="form-group">
        <%= f.label :fname, 'First Name' %><br>
        <%= f.text_field :fname, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :lname, 'Last Name' %><br>
        <%= f.text_field :lname, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homeadd, 'Home Address' %><br>
        <%= f.text_field :homeadd, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homefl, 'Apt/Suite' %><br>
        <%= f.text_field :homefl, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homecity, 'City' %><br>
        <%= f.text_field :homecity, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homestate, 'State' %><br>
        <%= f.text_field :homestate, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homezip, 'Zip Code' %><br>
        <%= f.text_field :homezip, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homeemail, 'Personal Email' %><br>
        <%= f.text_field :homeemail, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :homephone, 'Personal Phone' %><br>
        <%= f.text_field :homephone, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :creditscore, 'Credit Score' %><br>
        <%= f.text_field :creditscore, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :ownershipperc, '% of Ownership' %><br>
        <%= f.text_field :ownershipperc, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :dob, 'Date of Birth' %><br>
        <%= f.text_field :dob, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :ssn, 'SSN' %><br>
        <%= f.text_field :ssn, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :dl, 'Drivers License' %><br>
        <%= f.text_field :dl, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :bk, 'Have You Ever Filed Bankruptcy?' %><br>
        <%= f.text_field :bk, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :taxlien, 'Do You Have Tax Liens?' %><br>
        <%= f.collection_radio_buttons :taxlien, [[true, 'Yes'] ,[false, 'No']], :first, :last %>
        <%#= radio_button_tag(:taxlien, 'Yes') %>
        <%#= label_tag(:taxlien, 'yes') %>
        <%#= radio_button_tag(:taxlien, "No") %>
        <%#= label_tag(:taxlien, 'no') %>
      </div>
      <div class="form-group">
        <%= f.label :priormca, 'Have You Ever Used A Merchant Cash Advance?' %><br>

        <%= f.collection_radio_buttons :priormca, [[true, 'Yes'] ,[false, 'No']], :first, :last %>
        <%#= radio_button_tag(:priormca, 'Yes') %>
        <%#= label_tag(:priormca, 'yes') %>
        <%#= radio_button_tag(:priormca, "No") %>
        <%#= label_tag(:priormca, 'no') %>
      </div>
      <div class="form-group">
        <%= f.label :mcaprovider, 'If Yes, List Your Previous Cash Advance Provider' %><br>
        <%= f.text_field :mcaprovider, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit :Continue, class:'form-control btn btn-success' %>
      </div>
      <div class="form-group">
        <%= link_to :Back, "/applications/#{@application.id}/step2", class:'form-control btn btn-success' %>
      </div>
    </div>
  </div>
</div>